#rewardButton {
    cursor: pointer;
    border: 0;
    outline: 0;
    border-radius: 100%;
    padding: 0;
    margin: 0;
    letter-spacing: normal;
    text-transform: none;
    text-indent: 0px;
    text-shadow: none;
}
#rewardButton span {
    display: inline-block;
    width: 80px;
    height: 35px;
    border-radius: 5px;
    color: #fff;
    font-weight: 400;
    font-style: normal;
    font-variant: normal;
    font-stretch: normal;
    font-size: 18px;
    font-family: "Microsoft Yahei";
    background: #F44336;
}
#rewardButton span:hover{
    background: #F7877F;
}
#QR{
    padding-top:20px;
}
#QR a{
    border:0;
}
#QR img{
    width: 180px;
    max-width: 100%;
    display: inline-block;
    margin: 0.8em 2em 0 2em;
}

//打赏动画难看，修改
#wechat11:hover p{
    animation: roll 2s infinite linear alternate;
    -webkit-animation: roll 2s infinite linear alternate;
    -moz-animation: roll 2s infinite linear alternate;
}
#alipay11:hover p{
    animation: roll 0.1s infinite linear alternate;
    -webkit-animation: roll 2s infinite linear alternate;
    -moz-animation: roll 2s infinite linear alternate;
}

@keyframes roll {
    from {
      transform(rotateZ(30deg));
    }
    to {
      transform(rotateZ(-30deg));
    }
}



#wechat:hover p,#alipay:hover p{
    transform:scale(1.25);
    color:#333;
    transition:all 0.3s;
}